@page
@model WebAppComics.Pages.ListImage.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_LayoutUser.cshtml";
    var message = ViewData["Success"]?.ToString();
}

<form method="post" id="myForm" class="mt-3">
    @if (!string.IsNullOrEmpty(message))
    {
        <div class="alert-success" role="alert">
            @message
        </div>
    }
    
    <div class="mb-3">
        <label asp-for="ImageBonus.ChapterName" class="control-label"></label>
        <input asp-for="ImageBonus.ChapterName" class="form-control" />
        <span asp-validation-for="ImageBonus.ChapterName" class="text-danger"></span>
     

    </div>
    <div class="mb-3">
        <label class="form-label"> image </label>
       @* <input type="hidden" id="countFile" value="4" />*@
      @*  <input type="hidden" class="form-control" id="domain" />*@
        <input type="text" class="form-control" id="domain" asp-for="ImageBonus.ImageUrl" />
    </div>
    <div class="mb-3">
        <input type="file" id="fileupload"  >
        <img src="@Model.ImageBonus.ImageUrl" width="100" height="100" id="image" />
       
        <script src="~/js/Upload.js"></script>
        <@*script src="~/js/test.js"></script>*@
    </div>
   
    <div class="mb-3">
        <button type="submit" class="btn-danger">
            update
        </button>

    </div>

</form>
