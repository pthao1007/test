@page "{id:int}"
@model WebAppComics.Pages.ManageAccount.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_LayoutUser.cshtml";
    var message = ViewData["Success"]?.ToString();
}

<h1>Edit</h1>

<form method="post" class="mt-3">
    @if (!string.IsNullOrEmpty(message))
    {
        <div class="alert-success" role="alert">
            @message
        </div>
    }
    <div class="mb-3" hidden>
        <label class="form-label" > Id </label>
        <input type="text" class="form-control" asp-for="AccountBonus.AccountId" readonly />

    </div>
    <div class="mb-3">
        <label class="form-label"> Name </label>
        <input type="text" class="form-control" asp-for="AccountBonus.AccountName" />

    </div>
    <div class="mb-3">
        <label class="form-label"> Phone </label>
        <input type="number" class="form-control" asp-for="AccountBonus.Phone" />

    </div>
    <div class="mb-3">
        <label class="form-label"> Avartar </label>
        <input type="text" class="form-control" id="domain" asp-for="AccountBonus.AccountImage" value="" hidden />
        @*      <img src="@Model.ComicBonus.ComicBanner" width="100" height="100" />*@

    </div>
    <div class="mb-3">
        <input type="file" id="fileupload">
        <img src="@Model.AccountBonus.AccountImage" width="100" height="100" id="image" />

        <script src="~/js/Upload.js"></script>
        <script>

        </script>
    </div>
   

    <div class="mb-3">
        <label class="form-label"> Email </label>
        <input type="text" class="form-control" asp-for="AccountBonus.Email"  />

    </div>
    <div class="mb-3">
        <label class="form-label"> Email </label>
        <input type="password" class="form-control" asp-for="AccountBonus.PassWord" readonly />

    </div>

    <div class="mb-3">
        <label class="form-label"> Date </label>
        <input type="date" class="form-control" asp-for="AccountBonus.Date" />

    </div>
   
  
    <div class="mb-3">
        <button type="submit" class="btn-danger">
            update
        </button>

    </div>

</form>