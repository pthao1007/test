@page
@model WebAppComics.Pages.User.ComicSearch.ComicSearchModel
@{
    Layout = "~/Pages/Shared/_LayoutUser.cshtml";
}
<section class="product spad">
    <form method="get">
    <div class="row">
        <div class="col-lg-8 col-md-8 col-sm-8">
            <div class="section-title">
                <h4 style="padding-bottom:30px">Tìm kiếm truyện</h4>
                <input type="text" name="term" />
                <input type="submit" value="Tìm kiếm" class="btn btn-primary" />
            </div>
        </div>
    </div>

        @await Component.InvokeAsync("NToastNotify");
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="trending__product">

                    <div class="row">
                       @if (ViewData["search"]!= null){
                        @foreach (var item in Model.comic)
                        {
                            <div class="col-lg-3 col-md-6 col-sm-6">

                                <div class="product__item">
                                            <a href="../Details?id=@item.ComicId">
                                                <div class="product__item__pic" style="background-image: url(@item.ComicBanner); background-repeat: no-repeat;background-size: cover; background-position: top center;">

                                            <div class="comment"><i class="fa fa-clock-o"></i> @item.DateSummitted.Value.Date.ToString("dd-MM-yyyy")</div>
                                            <div class="view"> @item.ComicStatus</div>
                                        </div>
                                    </a>
                                    <div class="product__item__text">
                                        <h5><a asp-page="./User/Details" asp-route-id="@item.ComicId">@item.ComicName</a></h5>
                                    </div>
                                </div>

                            </div>
                        }
                        
                      }
                  
                    </div>
                </div>

            </div>
        </div>
    </div>
    </form>
</section>