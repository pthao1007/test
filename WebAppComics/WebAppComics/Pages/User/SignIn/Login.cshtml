@page
@model WebAppComics.Pages.LoginModel
@{
   Layout = "~/Pages/Shared/_LayoutUser.cshtml"; 
}

<body>
    @await Component.InvokeAsync("NToastNotify");
    <!-- Normal Breadcrumb Begin -->
    <section class="normal-breadcrumb">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="normal__breadcrumb__text">
                        <h2>Đăng nhập</h2>
                        <p>Chào mừng đến với TVT Comics!</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Normal Breadcrumb End -->
    <!-- Login Section Begin -->
    <section class="login spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <div class="login__form">
                        <h3>Login</h3>
                        <form method="post" asp-page="Login">
                            <div class="input__item">
                                <input type="text" placeholder="Username" name="accountName">
                                <span class="icon_profile"></span>
                            </div>
                            <div class="input__item">
                                <input type="password" name="password" placeholder="Password">
                                <span class="icon_lock"></span>
                            </div>
                            <input type="submit" value="Đăng nhập" class="site-btn">
                        </form>
                        <a asp-page="../SignIn/forgotPassword" class="forget_pass">Quên mật khẩu?</a>

                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="login__register">
                        <h3>Bạn chưa có tài khoản?</h3>
                        <a asp-page="../SignIn/SignUp" class="primary-btn">Đăng ký</a>
                    </div>
                </div>
            </div>
           
        </div>
    </section>
    <!-- Login Section End -->
    <!-- Js Plugins -->
    <script src="js/jquery-3.3.1.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/player.js"></script>
    <script src="js/jquery.nice-select.min.js"></script>
    <script src="js/mixitup.min.js"></script>
    <script src="js/jquery.slicknav.js"></script>
    <script src="js/owl.carousel.min.js"></script>
    <script src="js/main.js"></script>


</body>

