@page "{id:Guid}"
@model WebAppComics.Pages.ManageComic.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_LayoutUser.cshtml";
    //var a = ComicBonus.DateSummitted.
}

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
<h2 style="color:white; font-family:'Oswald'">SỬA TRUYỆN</h2>
@await Component.InvokeAsync("NToastNotify");
<form method="post" id="myForm" class="mt-3" style="color: white; width:fit-content">
   
    <div class="mb-3"> 
        <label class="form-label"> Id </label>
        <input type="text" class="form-control" asp-for="ComicBonus.ComicId" readonly  />
        
    </div>
    <div class="mb-3">
        <label class="form-label"> Name </label>
        <input type="text" class="form-control" asp-for="ComicBonus.ComicName"  />

    </div>
    <div class="mb-3">
        <label class="form-label"> Banner </label>
      @*  <input type="hidden" id="countFile" value="30"/>*@
      @*  <input type="hidden" id="countFile" name="" />*@
        <input type="hidden" class="form-control" id="domain" asp-for="ComicBonus.ComicBanner" />
     @*      <img src="@Model.ComicBonus.ComicBanner" width="100" height="100" />*@

    </div>
    <div class="mb-3">
        <input type="file" id="fileupload" >
        <img src="@Model.ComicBonus.ComicBanner" width="100" height="100" id="image" />
        <script src="~/js/Upload.js"></script>
     @*   <script src="~/js/test.js"></script>*@
    </div>
    <div class="mb-3">
        <label class="form-label"> Describe </label>
        <input type="text" class="form-control" asp-for="ComicBonus.Describe" />

    </div>
   
    <div class="mb-3">
        
        <label class="form-label"> Date </label>
        <input type="readonly" class="form-control" asp-for="ComicBonus.DateSummitted" />

    </div>
    <div class="mb-3">
        <label class="form-label"> rating </label>
        <input type="text" class="form-control" asp-for="ComicBonus.Rating" readonly />

    </div>
    <div class="mb-3">
        <label class="form-label"> Status </label>
        <input type="text" class="form-control" asp-for="ComicBonus.ComicStatus" />

    </div>
    <div class="mb-3">
        <label class="form-label"> AccountId </label>
        <input type="text" class="form-control" asp-for="ComicBonus.AccountId" readonly />

    </div>
    <div class="mb-3">
      <button type="submit" class="btn-danger">
       update</button>

    </div>
  
</form>
<script>
    $(document).ready(function () {
        $('#fileupload').change(function () {
            var files = $(this)[0].files;
            document.getElementById("countFile").value = files.length;
            //document.getElementById("countFile").name = files.length;
        });
    });
</script>


